{
  "version": 2,
  "builds": [
    {
      "src": "backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    { "src": "/predict", "dest": "backend/wsgi.py" },
    { "src": "/chat", "dest": "backend/wsgi.py" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}